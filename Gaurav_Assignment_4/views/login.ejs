<!DOCTYPE html>
<html lang="en">
    <%- include('Layouts/header', { title: 'login' }); %>
<body>
    <%- include('Layouts/nav'); %>

    <section class="center-content text-bg-light" style="min-height: calc(100vh - 40px); display: flex; align-items: center;">
        <div class="container">
                <% if (typeof message !== 'undefined' && message) { %>    
                    <div class="alert alert-warning" role="alert">          
                    <%= message %>  
                </div>
            <% } %>
            <div class="row">
                <div class="col-md-6">
                    <form id="signUpForm" action="/signup" method="POST" style="border: 1px solid #ccc; padding: 20px; margin-bottom: 30px; margin-top: 40px; height: auto;">
                        <h2 id="content-title">Sign up</h2>
                        <div class="mb-3">
                            <label for="username" class="form-label">User name</label>
                            <input type="text" id="username" name="username" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="userType" class="form-label">User Type</label>
                            <select class="form-select form-select-sm" id="userType" name="userType" aria-label="Default select example">
                                <option selected>Select from options</option>
                                <option value="Driver">Driver</option>
                                <option value="Examiner">Examiner</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-secondary w-25">Sign up</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <form id="loginForm" action="/login" method="POST" style="border: 1px solid #ccc; padding: 20px; margin-top: 40px; height: auto;">
                        <h2 id="content-title">Log in</h2>
                        <div class="mb-3">
                            <label for="username" class="form-label">User name</label>
                            <input type="text" id="username" name="username" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-secondary w-25">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include('Layouts/footer'); %>
    <%- include('Layouts/script'); %>
</body>
</html>
