<!DOCTYPE html>
<html lang="en">
    <%- include('Layouts/header', { title: 'G' }); %>
<body>
    <%- include('Layouts/nav', { user: user }); %>
    <%- include('Layouts/banner',{ h2: 'G_Test' }); %>
    <section id="g-height" class="center-content text-bg-light d-flex flex-column justify-content-center align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="p-4">
                        <% if (user) { %>
                            <h2>User Information</h2>
                            <form id="userInfo" style="border: 1px solid #ccc; padding: 20px; margin-bottom: 30px; margin-top: 40px;">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" value="<%= user.firstName %>" readonly>
                                </div>
                                <div class="mb-3">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= user.lastName %>" readonly>
                                </div>
                                <div class="mb-3">
                                    <label for="licenseNumber" class="form-label">License Number</label>
                                    <input type="text" class="form-control" id="licenseNumber" name="licenseNumber" value="<%= user.licenseNumber %>" readonly>
                                </div>
                                <div class="mb-3">
                                    <label for="age" class="form-label">Age</label>
                                    <input type="number" class="form-control" id="age" name="age" value="<%= user.age %>" readonly>
                                </div>
                                <div class="mb-3">
                                    <label for="dob" class="form-label">Date of Birth</label>
                                    <input type="text" class="form-control" id="dob" name="dob" value="<%= user.dob instanceof Date ? user.dob.toDateString() : user.dob %>" readonly>
                                </div>
                            </form>
                            <h2>Car Information</h2>
                            <form id="checkUpdate" style="border: 1px solid #ccc; padding: 20px; margin-bottom: 30px; margin-top: 40px;" action="/g" method="POST"
                                onsubmit="return updateCheck()">
                                <input type="hidden" name="licenseNumber" value="<%= user.licenseNumber %>">
                                <div class="mb-3">
                                    <label for="make" class="form-label">Make</label>
                                    <input type="text" class="form-control" id="make" name="make"
                                        value="<%= user.carDetails.make %>">
                                </div>
                                <div class="mb-3">
                                    <label for="model" class="form-label">Model</label>
                                    <input type="text" class="form-control" id="model" name="model"
                                        value="<%= user.carDetails.model %>">
                                </div>
                                <div class="mb-3">
                                    <label for="carYear" class="form-label">Car Year</label>
                                    <input type="number" class="form-control" id="carYear" name="carYear"
                                        value="<%= user.carDetails.carYear %>">
                                </div>
                                <div class="mb-3">
                                    <label for="plateNumber" class="form-label">Plate Number</label>
                                    <input type="text" class="form-control" id="plateNumber"
                                        name="plateNumber" value="<%= user.carDetails.plateNumber %>">
                                </div>
                                <button type="submit" class="btn btn-secondary">UPDATE</button>
                            </form>
                            <% if (user.firstName === 'First Name' && user.lastName === 'Last Name' && user.licenseNumber === '000000' && user.age === 0 && user.dob === null) { %>
                                <a href="/g2" class="btn btn-primary" style="background-color: rgb(231, 20, 20); border-color: rgb(97, 168, 51); color: white;">Go to G2 Page</a>
                            <% } %>
                        <% } else { %>
                            <h2>No user data found</h2>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
