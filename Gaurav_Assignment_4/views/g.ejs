            //     alert("Model should be between 2 to 50 characters and alphabetic");
            //     return false;
            // }
            // if (!carYear.match(/^\d{4}$/)) {
            //     alert("Please enter 4-digit for car Number.");
            //     return false;
            // }
            // if (!plateNumber.match(/^[a-zA-Z0-9]+$/)) {
            //     alert("Plate number should be numeric.");
            //     return false;
            // }

            return true;
        }
    </script>
<%- include('Layouts/footer'); %>
<%- include('Layouts/script'); %>
</body>
</html>

